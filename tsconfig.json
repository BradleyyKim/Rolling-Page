{
  "compilerOptions": {
    "types": ["node"],
    "strict": true,
    "outDir": "dist",
    "module": "es6",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types"]
  }
}
